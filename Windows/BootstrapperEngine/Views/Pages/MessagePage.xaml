<Page x:Class="Org.InCommon.InCert.BootstrapperEngine.Views.Pages.MessagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mock="clr-namespace:Org.InCommon.InCert.BootstrapperEngine.Models.Mockup.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      d:DataContext="{d:DesignInstance Type=mock:MockMessagePageModel,IsDesignTimeCreatable=True}"
      Margin="70,0,70,0"
      FontFamily="Verdana"
	Title="MessagePage">

    <Grid Background="{Binding Background}">
        <Label VerticalAlignment="Stretch"
               HorizontalAlignment="Stretch"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center"
               Foreground="{Binding Foreground}"
               FontSize="12pt">
            <TextBlock TextWrapping="Wrap" Text="{Binding Text}" />
        </Label>
    </Grid>
</Page>
