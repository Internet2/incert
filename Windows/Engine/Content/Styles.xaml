    <Color x:Key="BodyTextColor">Black</Color>
    <Color x:Key="LinkTextColor">#7D110C</Color>
    <Color x:Key="TitleTextColor">#7D110C</Color>
    <Color x:Key="DisabledTextColor">Gray</Color>
